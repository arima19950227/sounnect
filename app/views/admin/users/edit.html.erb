<div class='container'>
  <div class='row'>
    <div class="col mx-auto">
    <h2>ユーザー編集</h2>
    <%= form_with model: @user, url: admin_user_path(@user.id), local: true ,method: :patch do |f| %>
      <div class="form-group col-12">
        <%= f.label "名前" %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label "施設の写真" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group col-12">
        <%= f.label "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>

      <div class="form-group">
       <p>ユーザーステータス</p>
        <%= f.radio_button :is_deleted, 0, checked: true %>有効
        <%= f.radio_button :is_deleted, 1 %>退会
      </div>

      <div class="form-group">
        <%= f.submit "編集する", class: 'btn btn-secondary' %>
      </div>
    <% end %>
   </div>
  </div>
</div