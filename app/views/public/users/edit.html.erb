<div class='container'>
  <div class='row'>
    <div class="col mx-auto">
    <h2>ユーザー編集</h2>
    <%= form_with model:@user do |f| %>
      <div class="form-group col-12">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group col-12">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集する", class: 'btn btn-secondary' %>
      </div>

      <div class="form-group row">
       <%= link_to "退会する", unsubscribe_path, class: 'mt-3 btn btn-danger' %>
      </div>
    <% end %>
     </div>

  </div>
</div>
